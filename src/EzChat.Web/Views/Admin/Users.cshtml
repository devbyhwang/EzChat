@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "사용자 관리";
}

<h1>사용자 관리</h1>

<table class="table">
    <thead>
        <tr>
            <th>이메일</th>
            <th>닉네임</th>
            <th>가입일</th>
            <th>마지막 로그인</th>
            <th>상태</th>
            <th>작업</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.DisplayName</td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@(user.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge badge-success">활성</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">비활성</span>
                    }
                </td>
                <td>
                    <form asp-action="ToggleUserActive" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-warning">
                            @(user.IsActive ? "비활성화" : "활성화")
                        </button>
                    </form>
                    <form asp-action="DeleteUser" method="post" style="display:inline;"
                          onsubmit="return confirm('정말 삭제하시겠습니까?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">삭제</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin" class="btn btn-secondary">대시보드로 돌아가기</a>
