@model DashboardStats
@{
    ViewData["Title"] = "관리자 대시보드";
}

<h1>관리자 대시보드</h1>

<div class="dashboard-stats">
    <div class="stat-card">
        <h3>총 사용자</h3>
        <p class="stat-number">@Model.TotalUsers</p>
    </div>
    <div class="stat-card">
        <h3>활성 사용자</h3>
        <p class="stat-number">@Model.ActiveUsers</p>
    </div>
    <div class="stat-card">
        <h3>채팅방</h3>
        <p class="stat-number">@Model.TotalRooms</p>
    </div>
    <div class="stat-card">
        <h3>게시글</h3>
        <p class="stat-number">@Model.TotalPosts</p>
    </div>
    <div class="stat-card">
        <h3>IP 차단</h3>
        <p class="stat-number">@Model.TotalBans</p>
    </div>
    <div class="stat-card">
        <h3>오늘 로그인</h3>
        <p class="stat-number">@Model.TodayLogins</p>
    </div>
</div>

<div class="admin-menu">
    <h2>관리 메뉴</h2>
    <ul class="admin-links">
        <li><a href="/Admin/Users">사용자 관리</a></li>
        <li><a href="/Admin/IpBans">IP 차단 관리</a></li>
        <li><a href="/Admin/Rooms">채팅방 관리</a></li>
        <li><a href="/Admin/AuditLogs">감사 로그</a></li>
    </ul>
</div>
