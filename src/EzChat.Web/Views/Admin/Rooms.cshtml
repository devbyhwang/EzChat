@model IEnumerable<ChatRoom>
@{
    ViewData["Title"] = "채팅방 관리";
}

<h1>채팅방 관리</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>이름</th>
            <th>생성자</th>
            <th>생성일</th>
            <th>상태</th>
            <th>작업</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Id</td>
                <td>@room.Name</td>
                <td>@room.CreatedBy?.Email</td>
                <td>@room.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @if (room.IsActive)
                    {
                        <span class="badge badge-success">활성</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">삭제됨</span>
                    }
                </td>
                <td>
                    @if (room.IsActive)
                    {
                        <form asp-action="DeleteRoom" method="post"
                              onsubmit="return confirm('채팅방을 삭제하시겠습니까?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@room.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">삭제</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin" class="btn btn-secondary">대시보드로 돌아가기</a>
