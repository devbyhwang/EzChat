@model IEnumerable<BoardPost>
@{
    ViewData["Title"] = "게시판";
}

<h1>게시판</h1>

<div class="board-header">
    <form method="get" class="search-form">
        <input type="text" name="search" value="@ViewBag.SearchTerm" placeholder="검색어 입력..." class="form-control" />
        <button type="submit" class="btn btn-secondary">검색</button>
    </form>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <a href="/Board/Create" class="btn btn-primary">글쓰기</a>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
            <th>조회수</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Id</td>
                <td>
                    <a href="/Board/Detail/@post.Id">@post.Title</a>
                    @if (post.Comments.Count > 0)
                    {
                        <span class="comment-count">[@post.Comments.Count]</span>
                    }
                </td>
                <td>@(post.Author?.DisplayName ?? post.Author?.Email ?? "알 수 없음")</td>
                <td>@post.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@post.ViewCount</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <div class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <span class="page-item active">@i</span>
            }
            else
            {
                <a href="/Board?page=@i&search=@ViewBag.SearchTerm" class="page-item">@i</a>
            }
        }
    </div>
}
